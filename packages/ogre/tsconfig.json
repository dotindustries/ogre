{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "declaration": true,
    "importHelpers": true,
    "module": "NodeNext",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "target": "es2019",
    "downlevelIteration": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
