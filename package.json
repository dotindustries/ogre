{
  "name": "@dotinc/ogre",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotindustries/ogre.git"
  },
  "version": "0.0.0",
  "private": false,
  "description": "In-memory git-like repository for objects",
  "main": "lib/index.ts",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "nyc ava",
    "test.watch": "ava --watch",
    "coverage:html": "nyc report --reporter=html",
    "coverage:coveralls": "mkdir -p coverage && nyc ava && nyc report --reporter=text-lcov > ./coverage/lcov.info",
    "coverage": "nyc report"
  },
  "ava": {
    "timeout": "60s",
    "files": [
      "./src/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "author": "JÃ¡nos Veres @nadilas",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "ava": "^4.0.1",
    "coveralls": "^3.1.1",
    "nyc": "^15.1.0",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  }
}
